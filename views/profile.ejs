<body>
  <%- include('../partials/header.ejs')%>
    <section id="banner" class="pt-4">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
           
            
          </div>
          <div class="col-md-6">
         
          </div>

        </div>
      </div>
 
    </section>

    <section id="profile">
        <div class="container">
            <div class="row">
                <div class="md-col-12"><h2 class="text-center"><img style="width:100px" src="/upload/<%=record.img%>"alt=><%=username%>s profile</h2>
                    <form action="/profilerecord" method="post" enctype="multipart/form-data">
                      
                        <label for="">firstname</label>
    
    <input type="text" name="fname" id="" class="form-control" value="<%=record.firstname%>">
                        <label for="">Last name</label>
                        <input type="text" name="lname" id="" class="form-control" value="<%=record.lastname%>">
                       
                        <label for="">Email</label>
                        <input type="text" name="email" id="" class="form-control" value="<%=record.email%>" required>
                        <label for="">Mobile number</label>
                        <input type="number" name="mobile" id="" class="form-control" value="<%=record.mobile%>">
                        <label for="">Profile Image</label>
                        <input type="file" name="img" id="" class="form-control">
                        <button type="submit" class="form-control btn btn-success mt-2 mb-2">profile update</button>


                    </form>
                </div>
            </div>
        </div>
    </section>
   
    
